<% include ./partials/boilerplate.ejs %>

<body class="homepage">

    <header>
        <nav>
            <ul>
                <li>Log in</li>
                <li class="title">Vice Feed</li>
                <li><a href="/database">My articles</a></li>
            </ul>
        </nav>
    </header>


    <div class="container">
        <ul class "api">
            <% data.forEach(article => { %>
                <form class="" action="/database" method="POST">
                    <input id="title" type="text" name="title" value="<%= article.title %>" />
                    <input id="author" type="text" name="author" value="<%= article.author %>" />
                    <input id="description" type="text" name="description" value="<%= article.description %>" />
                    <input id="url" type="text" name="url" value="<%= article.url %>" />
                    <input type="submit" value="save" class="inline"/>
                </form>
                <% })%>
        </ul>
    </div>

    <div class="arrow bounce">scroll me<br><a class="fa fa-arrow-down fa-2x"></a></div>
    <footer>
        <span><i class="fas fa-plus"></i></span>
    </footer>

<% include ./partials/end.ejs %>
